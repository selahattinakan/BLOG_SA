@{
    ViewData["Title"] = "Anasayfa";
}

@* Arama *@
<section class="cta-section theme-bg-light py-5">
    <div class="container text-center">
        <h2 class="heading">Blog Akan'a Hoşgeldiniz</h2>
        <div class="intro">Aramak istediğiniz makaleyi bir kaç kelime ile giriniz</div>
        <form class="signup-form form-inline justify-content-center pt-3">
            <div class="form-group">
                <label class="sr-only" for="search">Ara</label>
                <input type="text" id="search" name="search" class="form-control mr-md-1" placeholder="Aranacak kelimeyi giriniz">
            </div>
            <button type="submit" class="btn btn-primary">Ara</button>
        </form>
    </div>
</section>


<section class="blog-list px-3 py-5 p-md-5">
    <div class="container">
        <div class="item mb-5">
            <div class="media">
                <img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="~/img/sample_thumb_1.jpg" alt="image">
                <div class="media-body">
                    <h3 class="title mb-1"><a asp-area="" asp-controller="Home" asp-action="Article">Why Every Developer Should Have A Blog</a></h3>
                    <div class="meta mb-1"><span class="date">Published 2 days ago</span><span class="time">5 min read</span><span class="comment"><a href="#">8 comments</a></span></div>
                    <div class="intro">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies...</div>
                    <a class="more-link" href="blog-post.html">Read more &rarr;</a>
                </div><!--//media-body-->
            </div><!--//media-->
        </div><!--//item-->
        <div class="item mb-5">
            <div class="media">
                <img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="~/img/sample_thumb_2.jpg" alt="image">
                <div class="media-body">
                    <h3 class="title mb-1"><a asp-area="" asp-controller="Home" asp-action="Article">A Guide to Becoming a Full-Stack Developer</a></h3>
                    <div class="meta mb-1"><span class="date">Published 3 months ago</span><span class="time">3 min read</span><span class="comment"><a href="#">26 comments</a></span></div>
                    <div class="intro">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies...</div>
                    <a class="more-link" href="blog-post.html">Read more &rarr;</a>
                </div><!--//media-body-->
            </div><!--//media-->
        </div><!--//item-->

        <nav class="blog-nav nav nav-justified my-5">
            <a class="nav-link-prev nav-item nav-link d-none rounded-left" href="#">Önceki Sayfa<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
            <a class="nav-link-next nav-item nav-link rounded" href="blog-list.html">Sonraki Sayfa<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
        </nav>

    </div>
</section>

@* Abone Ol *@

<section class="cta-section theme-bg-light py-5" style="margin-bottom:50px;">
    <div class="container text-center">
        <h2 class="heading">Blog Akan bir developer blogdur.</h2>
        <div class="intro">Hoşgeldiniz, mail adresinizi girerek güncel makalalelerden haberdar olabilirsiniz!</div>
        <form class="signup-form form-inline justify-content-center pt-3">
            <div class="form-group">
                <label class="sr-only" for="semail">Mail</label>
                <input type="email" id="semail" name="semail1" class="form-control mr-md-1 semail" placeholder="Mailinizi giriniz">
            </div>
            <button type="submit" class="btn btn-primary">Abone Ol</button>
        </form>
    </div>
</section>



